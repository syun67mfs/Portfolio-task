<div class="container">
  <div class="row">
    <div class="col-sm-6">
        <%= form_with model: @genre, :url => {:action => :create}, local:true do |f| %>
            <h4>ジャンル</h4>
            <%= f.text_field :name %>
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active, "有効", {value: :true, style: "display: inline-block;"} %>
            <%= f.radio_button :is_active, false %>
            <%= f.label :is_active, "無効", {value: :false, style: "display: inline-block;"} %>
            <%= f.submit "作成", class: "btn btn-info" %>
        <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
         <table class="table table-inverse table-bordered">
            <thead>
                <tr>
                    <td>ジャンル</td>
                    <td>状態</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                <% @genres.each do |genre| %>
                <tr>
                    <td><%= genre.name %></td>
                    <% if genre.is_active == true %>
                        <td>有効</td>
                    <% else %>
                        <td>無効</td>
                    <% end %>
                    <td><%= link_to "編集する", edit_admins_genre_path(genre.id), class: "btn btn-success" %></td>
                </tr>
                <% end %>
            </tbody>
    </div>
</div>