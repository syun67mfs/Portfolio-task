<%= render 'layouts/header' %>
<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <a href="https://www.callofduty.com/ja/blackopscoldwar">
          <%= image_tag asset_path('cod.png'), :size =>'270x150', class: 'logo_image' %>
        </a>
        <% if @genres %>
          <%= render 'game_items/search', genres: @genres %>
          <!--ランキングを表示させたい-->
        <% end %>
        <div class="new_post">
          <%= link_to '投稿する', new_game_item_path, class: "btn btn-primary"%>
        </div>
      </div>
      <div class="col-xs-9">
        <div class="jumbotron">
        <div class="welcome">
        	<h1>Welcome to Gamers</h1>
        	<p>ゲーム好きのゲーム好きによるゲーム好きの為のゲーム紹介サイト</p>
        	<p><%= link_to 'もっと詳しく', home_about_path, class: "btn btn-primary btn-lg" %></p>
        </div>
        </div>
      <a href="https://www.ea.com/ja-jp/games/apex-legends/news">
        <%= image_tag asset_path('apex2.png'), :size =>'850x160', class: 'logo_image' %>
      </a>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-3">
      </div>
      <div class="col-xs-4">
       <h4 class="recommend-items">オススメ</h4>
        <div class="recommended-item">
          <% if @game_items %>
            <% @game_items.each do |game_item| %>
            <% if game_item.genre %>
              <div class="box1">
                <%= link_to game_item_path(game_item) do %>
                   <%= attachment_image_tag game_item, :image, :fill, 170, 150, fallback: "no_image.jpg", :size => '170x150' %>
                   <%= game_item.name %>
                <% end %>
              </div>
            <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="col-xs-1">
      </div>
      <div class="col-xs-4">
       <h4 class="new-arrival">新着</h4>
        <div class="new-items">
          <% if @game_items %>
            <% @game_item_new.each.with_index(1) do |game_item| %>
              <% if game_item.genre %>
                <div class="box1">
                  <%= link_to game_item_path(game_item) do %>
                    <%= attachment_image_tag game_item, :image, :fill, 170, 150, fallback: "no_image.jpg", :size => '170x150' %>
                    <%= game_item.name %>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

