<%= render 'layouts/header' %>

<div class="game-body">

  <div class="container">
    <div class="row">
      <div class="col-xs-3">
          <%= render 'game_items/search',  genres: @genres %>
          <%= link_to '投稿する', new_game_item_path, class: "btn btn-primary"%>
      </div>

      <!--ここにランキングを入れたい-->

      <div class="col-xs-9">

      <h2><%= @title %>一覧</h2>
          <h4>全<%= @game_items.count %>件</h4>
      <div class="game-items">
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>タイトル</th>
              <th>評価</th>
            </tr>
          </thead>

          <tbody>
              <% @game_items.each do |game_item| %>
              <% if game_item.genre.is_active %>
            <tr>
              <td>
                <%= link_to game_item_path(game_item) do %>
                  <%= attachment_image_tag game_item, :image, :fill, 180, 120, fallback: "no_image.jpg", :size =>'170x150' %>
                <% end %>
              </td>
              <td>
                <%= link_to game_item_path(game_item) do %>
                  <%= game_item.name %>
                <% end %>
              </td>
              <td>
                  <div id="star">
                    <script>
                      $('#star').raty({
                        size : 36,
                        starOff: '<%= asset_path('star-off.png') %>',
                        starOn: '<%= asset_path('star-on.png') %>',
                        starHalf: '<%= asset_path('star-half.png') %>',
                        score: 'game_item[rate]',
                        half: true,
                        readOnly: true,
                      });
                    </script>
                  </div>
              </td>
              <% end %>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>